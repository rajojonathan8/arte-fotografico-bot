<%- include('_head', { title: 'Dashboard' }) %>
<header class="p-4 bg-white shadow">
  <div class="max-w-6xl mx-auto flex items-center justify-between">
    <h1 class="text-xl font-semibold">Panel — Arte Fotográfico</h1>
    <form method="POST" action="/admin/logout">
      <button class="text-sm text-slate-600 hover:text-slate-900">Salir</button>
    </form>
  </div>
</header>

<main class="max-w-6xl mx-auto p-4">
  <h1 class="text-2xl font-bold mb-6">Panel Arte Fotográfico</h1>

  <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
    <% (cards || []).forEach(c => { %>
      <a href="<%= c.href %>" class="block rounded-2xl bg-white p-5 shadow hover:shadow-md transition">
        <div class="text-3xl mb-3"><%= c.icon %></div>
        <div class="text-lg font-semibold"><%= c.title %></div>
        <p class="text-sm text-slate-600 mt-1"><%= c.desc %></p>
      </a>
    <% }) %>
  </div>
</main>

<%- include('_foot') %>
