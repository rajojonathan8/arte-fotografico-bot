<%- include('_head', { title: 'Nueva orden (persona)' }) %>

<main class="max-w-3xl mx-auto p-4">
  <h1 class="text-2xl font-semibold mb-6">Nueva orden — Persona</h1>

  <form method="POST" action="/admin/ordenes/nueva-persona" class="space-y-4">

    <div>
      <label class="block text-sm font-medium">Nombre</label>
      <input name="nombre" required class="w-full px-4 py-2 rounded border" placeholder="Nombre completo" />
    </div>

    <div>
      <label class="block text-sm font-medium">Número de orden</label>
      <input name="numero_orden" required class="w-full px-4 py-2 rounded border" placeholder="Ej.: 4521" />
    </div>

    <div>
      <label class="block text-sm font-medium">Número de toma</label>
      <input name="numero_toma" required class="w-full px-4 py-2 rounded border" placeholder="Ej.: 18" />
    </div>

    <div>
      <label class="block text-sm font-medium">Fecha de toma</label>
      <input type="date" name="fecha_toma" required class="w-full px-4 py-2 rounded border" />
    </div>

    <div>
      <label class="block text-sm font-medium">Fecha de entrega</label>
      <input type="date" name="fecha_entrega" required class="w-full px-4 py-2 rounded border" />
    </div>

    <div>
      <label class="block text-sm font-medium">Urgencia</label>
      <select name="urgencia" class="w-full px-4 py-2 rounded border">
        <option value="Normal">Normal</option>
        <option value="Urgente">Urgente</option>
        <option value="Muy urgente">Muy urgente</option>
      </select>
    </div>

    <div>
      <label class="block text-sm font-medium">Precio ($)</label>
      <input name="precio" required class="w-full px-4 py-2 rounded border" placeholder="Ej.: 12.00" />
    </div>

    <div>
      <label class="block text-sm font-medium">Teléfono</label>
      <input name="telefono" class="w-full px-4 py-2 rounded border" placeholder="5037XXXXXX" />
    </div>

    <div class="flex justify-end space-x-2">
      <a href="/admin/ordenes?tab=personas"
         class="px-4 py-2 rounded-lg border text-slate-700 hover:bg-slate-50">
        Cancelar
      </a>

      <button type="submit"
        class="px-4 py-2 rounded-lg text-white bg-emerald-600 hover:bg-emerald-700">
        Guardar orden
      </button>
    </div>

  </form>
</main>

<%- include('_foot') %>
