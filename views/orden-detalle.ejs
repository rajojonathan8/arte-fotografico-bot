<%- include('_head', { title }) %>

<header class="p-4 bg-white shadow">
  <div class="max-w-4xl mx-auto flex items-center justify-between">
    <h1 class="text-xl font-semibold">Detalle de orden — <%= tipo === 'persona' ? 'Persona' : 'Institución' %></h1>
    <a href="/admin/ordenes?tab=<%= tipo === 'persona' ? 'personas' : 'instituciones' %>"
       class="text-sm text-slate-600 hover:text-slate-900">← Volver</a>
  </div>
</header>

<main class="max-w-4xl mx-auto p-4 space-y-4">

  <section class="bg-white rounded-2xl shadow p-4 space-y-2">
    <% if (tipo === 'persona') { %>
      <p><strong>Nombre:</strong> <%= orden.nombre %></p>
      <p><strong>N° orden:</strong> <%= orden.numero_orden %></p>
      <p><strong>N° toma:</strong> <%= orden.numero_toma %></p>
      <p><strong>Fecha toma:</strong> <%= orden.fecha_toma %></p>
      <p><strong>Fecha entrega:</strong> <%= orden.fecha_entrega || '' %></p>
      <p><strong>Fecha entrega:</strong> <%= orden.fecha_entrega %></p>
      <p><strong>Urgencia:</strong> <%= orden.urgencia %></p>
      <p><strong>Teléfono:</strong> <%= orden.telefono %></p>
      <p><strong>Entrega:</strong> <%= orden.entrega %></p>
    <% } else { %>
      <p><strong>Institución:</strong> <%= orden.institucion %></p>
      <p><strong>Sección:</strong> <%= orden.seccion %></p>
      <p><strong>Paquete:</strong> <%= orden.paquete %></p>
      <p><strong>Toma principal:</strong> <%= orden.toma_principal %></p>
      <p><strong>Collage 1:</strong> <%= orden.collage1 %></p>
      <p><strong>Collage 2:</strong> <%= orden.collage2 %></p>
      <p><strong>Fecha toma:</strong> <%= orden.fecha_toma %></p>
      <p><strong>Teléfono:</strong> <%= orden.telefono %></p>
      <p><strong>Entrega:</strong> <%= orden.entrega %></p>
      <p><strong>Urgencia:</strong> <%= orden.urgencia %></p>
    <% } %>
  </section>

  <% if (tipo === 'persona') { %>
    <%
      const precioNum = Number(orden.precio || 0);
      const abonoNum  = Number(orden.pago_abono || 0);
      const saldo     = Math.max(precioNum - abonoNum, 0);
      const estadoPago = orden.pago_estado || 'Pendiente';
    %>

    <section class="bg-white rounded-2xl shadow p-4 space-y-2">
      <h2 class="text-lg font-semibold mb-2">Información de pago</h2>
      <p><strong>Precio:</strong> $<%= precioNum.toFixed(2) %></p>
      <p><strong>Abonado:</strong> $<%= abonoNum.toFixed(2) %></p>
      <p><strong>Saldo:</strong> $<%= saldo.toFixed(2) %></p>
      <p><strong>Estado de pago:</strong> <%= estadoPago %></p>

      <div class="mt-3 flex gap-2">
        <a href="/admin/ordenes/persona/<%= idx %>/abono"
           class="px-3 py-1.5 rounded-lg bg-sky-100 text-sky-800 text-xs">
          Registrar abono
        </a>
        <form method="POST" action="/admin/ordenes/persona/<%= idx %>/marcar-pagado"
              onsubmit="return confirm('¿Marcar esta orden como PAGADA?');">
          <button type="submit"
                  class="px-3 py-1.5 rounded-lg bg-emerald-600 text-white text-xs">
            Marcar como pagado
          </button>
        </form>
      </div>
    </section>

    <section class="bg-white rounded-2xl shadow p-4 space-y-2">
      <h2 class="text-lg font-semibold mb-2">Historial de abonos</h2>

      <% if (!orden.pagos || orden.pagos.length === 0) { %>
        <p class="text-sm text-slate-500">No hay pagos registrados.</p>
      <% } else { %>
        <div class="overflow-x-auto">
          <table class="min-w-full text-sm">
            <thead class="bg-slate-50 text-slate-600">
              <tr>
                <th class="px-3 py-2 text-left">Fecha</th>
                <th class="px-3 py-2 text-right">Monto</th>
                <th class="px-3 py-2 text-left">Nota</th>
              </tr>
            </thead>
            <tbody class="divide-y divide-slate-100">
              <% orden.pagos.forEach(p => { %>
                <tr>
                  <td class="px-3 py-2"><%= p.fecha %></td>
                  <td class="px-3 py-2 text-right">$<%= Number(p.monto || 0).toFixed(2) %></td>
                  <td class="px-3 py-2"><%= p.nota || '' %></td>
                </tr>
              <% }) %>
            </tbody>
          </table>
        </div>
      <% } %>
    </section>
  <% } %>

</main>

<%- include('_foot') %>
