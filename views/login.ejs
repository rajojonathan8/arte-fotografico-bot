<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Panel de Empleados</title>

  <style>
    * {
      box-sizing: border-box;
    }

    body {
      font-family: system-ui, -apple-system, BlinkMacSystemFont, "Segoe UI", sans-serif;
      margin: 0;
      min-height: 100vh;

      /* 游댳 Fondo: imagen de la empresa */
      background-image: url("/admin-public/bg-arte.jpg");
      background-size: cover;        
      background-position: center;   
      background-repeat: no-repeat;
      background-attachment: fixed;

      display: flex;
      align-items: center;
      justify-content: center;
      padding: 16px;
      position: relative;
      color: #e5e7eb;
      overflow: hidden;
    }

    /* 游댳 Capa oscura */
    body::before {
      content: "";
      position: fixed;
      inset: 0;
      background: radial-gradient(circle at top left, rgba(56, 191, 248, 0.055), transparent 55%),
                  radial-gradient(circle at bottom right, rgba(3, 15, 11, 0.034), transparent 55%),
                  linear-gradient(
                    135deg,
                    rgba(15, 23, 42, 0.95),
                    rgba(15, 23, 42, 0.78)
                  );
      z-index: 0;
    }

    /* 游댳 Animaci칩n de fondo suave */
    .bg-orb {
      position: fixed;
      border-radius: 999px;
      filter: blur(70px);
      opacity: 0.4;
      pointer-events: none;
      z-index: 0;
      animation: float 14s ease-in-out infinite alternate;
    }
    .bg-orb.orb-1 {
      width: 260px;
      height: 260px;
      background: #22c55e;
      top: 5%;
      left: 10%;
      animation-delay: 0s;
    }
    .bg-orb.orb-2 {
      width: 220px;
      height: 220px;
      background: #22d3ee;
      bottom: 0%;
      right: 8%;
      animation-delay: 1.5s;
    }

    @keyframes float {
      0%   { transform: translate3d(0,0,0) scale(1);   }
      100% { transform: translate3d(20px,-20px,0) scale(1.05); }
    }

    /* 游댳 Tarjeta principal con animaci칩n */
    .card {
      position: relative;
      z-index: 1;

      background: rgba(2, 6, 23, 0.94);
      border-radius: 18px;
      padding: 24px 22px 22px;
      width: 100%;
      max-width: 380px;
      box-shadow: 0 24px 50px rgba(0,0,0,0.65);
      border: 1px solid rgba(148,163,184,0.35);

      backdrop-filter: blur(16px);

      animation: cardIn 0.6s ease-out forwards;
      transform: translateY(10px);
      opacity: 0;
    }

    @keyframes cardIn {
      from {
        opacity: 0;
        transform: translate3d(0,18px,0) scale(0.99);
      }
      to {
        opacity: 1;
        transform: translate3d(0,0,0) scale(1);
      }
    }

    .logo-wrap {
      display: flex;
      flex-direction: column;
      align-items: center;
      gap: 8px;
      margin-bottom: 10px;
    }

    .logo-wrap img {
      width: 70px;
      height: 70px;
      border-radius: 999px;
      object-fit: cover;
      box-shadow: 0 0 0 2px rgba(15,23,42,0.9),
                  0 0 0 4px rgba(34,197,94,0.55);
      background: #020617;
    }

    .logo-text {
      font-size: 0.78rem;
      text-transform: uppercase;
      letter-spacing: 0.18em;
      color: #9ca3af;
    }

    h1 {
      font-size: 1.35rem;
      margin-bottom: 4px;
      text-align: center;
      color: #f9fafb;
    }

    p.sub {
      font-size: 0.85rem;
      text-align: center;
      color: #9ca3af;
      margin-top: 0;
      margin-bottom: 16px;
    }

    label {
      font-size: 0.85rem;
      display: block;
      margin-bottom: 4px;
      color: #d1d5db;
    }

    input {
      width: 100%;
      padding: 10px 12px;
      border-radius: 10px;
      border: 1px solid #374151;
      background: #020617;
      color: #e5e7eb;
      font-size: 0.95rem;
      margin-bottom: 12px;
      transition: border-color 0.18s ease, box-shadow 0.18s ease, background 0.18s ease;
    }

    input::placeholder {
      color: #6b7280;
    }

    input:focus {
      outline: none;
      border-color: #22c55e;
      box-shadow: 0 0 0 1px #22c55e40;
      background: #020617;
    }

    .error-box {
      color: #fecaca;
      background: rgba(248,113,113,0.12);
      border-radius: 10px;
      padding: 6px 10px;
      font-size: 0.82rem;
      margin-bottom: 10px;
      border: 1px solid rgba(248,113,113,0.4);
      text-align: center;
    }

    button {
      width: 100%;
      padding: 10px 12px;
      border-radius: 999px;
      border: none;
      font-size: 0.95rem;
      font-weight: 600;
      cursor: pointer;
      background: linear-gradient(135deg,#22c55e,#16a34a);
      color: #020617;
      margin-top: 4px;
      display: inline-flex;
      align-items: center;
      justify-content: center;
      gap: 8px;
      transition: transform 0.12s ease, box-shadow 0.12s ease, opacity 0.12s ease;
      box-shadow: 0 10px 25px rgba(34,197,94,0.35);
    }

    button:hover {
      opacity: 0.97;
      transform: translateY(-1px);
      box-shadow: 0 14px 30px rgba(34,197,94,0.4);
    }

    button:active {
      transform: translateY(0);
      box-shadow: 0 8px 18px rgba(34,197,94,0.35);
    }

    button[disabled] {
      opacity: 0.7;
      cursor: default;
      box-shadow: none;
    }

    /* 游댃 Spinner */
    .spinner {
      width: 16px;
      height: 16px;
      border-radius: 999px;
      border: 2px solid rgba(15,23,42,0.2);
      border-top-color: #022c22;
      border-right-color: #022c22;
      animation: spin 0.6s linear infinite;
    }

    @keyframes spin {
      to { transform: rotate(360deg); }
    }

    .hint {
      margin-top: 10px;
      font-size: 0.78rem;
      color: #9ca3af;
      text-align: center;
    }

    .hint span {
      color: #bbf7d0;
    }

    @media (max-width: 480px) {
      .card {
        padding: 20px 16px 18px;
        border-radius: 14px;
      }
      h1 {
        font-size: 1.2rem;
      }
    }
  </style>
</head>

<body>
  <!-- orbes de luz decorativos -->
  <div class="bg-orb orb-1"></div>
  <div class="bg-orb orb-2"></div>

  <div class="card">
    <div class="logo-wrap">
      <!-- 游댳 Logo de tu estudio -->
      <img src="../admin-public/bg-arte.jpg" alt="Arte Fotogr치fico" onerror="this.style.display='none'" />
      <div class="logo-text">Arte Fotogr치fico 췅 Sonsonate</div>
    </div>

    <h1>Panel de Empleados</h1>
    <p class="sub">Ingresa el PIN para acceder al panel interno.</p>

    <% if (error) { %>
      <div class="error-box">
        <%= error %>
      </div>
    <% } %>

    <form id="login-form" action="/admin/login" method="POST">
      <label for="pin">PIN</label>
      <input
        type="password"
        id="pin"
        name="pin"
        placeholder="PIN"
        autocomplete="off"
        required
      />

      <button id="btn-submit" type="submit">
        <span id="btn-text">Entrar</span>
        <span id="btn-spinner" class="spinner" style="display:none;"></span>
      </button>
    </form>

    <p class="hint">
      Por ahora todos usan el mismo <span>PIN de empleado</span>.
    </p>
  </div>

  <script>
    // 游댃 Estado "Entrando..." al enviar el formulario
    const form = document.getElementById('login-form');
    const btn = document.getElementById('btn-submit');
    const txt = document.getElementById('btn-text');
    const spn = document.getElementById('btn-spinner');

    if (form && btn && txt && spn) {
      form.addEventListener('submit', () => {
        btn.disabled = true;
        txt.textContent = 'Entrando...';
        spn.style.display = 'inline-block';
      });
    }
  </script>
</body>
</html>
